<div class="align-middle w-40 bg-light p-3 py-5 border rounded border-dark" style="border-width: 5px !important;">
  <h2>Small Finances</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "my-3 form-control"  %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "my-3 form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-check">
        <%= f.check_box :remember_me, class: "form-check-input", style: "position: inherit" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="action">
      <%= f.submit "Log in", class: "btn btn-primary px-5"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<div class="landing-image w-100 h-100"></div>